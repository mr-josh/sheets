{
  "$schema": "../www/node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": {
      "cwd": "../www",
      "script": "npm run build"
    },
    "beforeDevCommand": {
      "cwd": "../www",
      "script": "npm run dev"
    },
    "devPath": "http://localhost:3000",
    "distDir": "../www"
  },
  "package": {
    "productName": "sheets",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "clipboard": {
        "writeText": true
      },
      "dialog": {
        "confirm": true,
        "open": true
      },
      "window": {
        "close": true,
        "create": true,
        "maximize": true,
        "minimize": true,
        "setDecorations": true,
        "setFocus": true,
        "setMinSize": true,
        "setPosition": true,
        "setResizable": true,
        "setSize": true,
        "setTitle": true,
        "show": true,
        "startDragging": true,
        "unmaximize": true
      },
      "process": {
        "exit": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "sheet",
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "alwaysOnTop": true,
        "center": true,
        "title": "Sheet",
        "height": 430,
        "width": 380
      }
    ]
  }
}
